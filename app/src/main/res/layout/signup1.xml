<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#fff"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.njit.njitsafety.Signup$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:text="Sign Up "
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorFont"

            android:layout_height="wrap_content"
            android:text="UCID :  "/>
        <EditText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:hint="Enter your UCID"
            android:textColorHint="#999"
            android:inputType="text"
            android:textColor="@color/colorFont"
            android:id="@+id/ent_ucid"
            android:layout_marginLeft="49dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorFont"

            android:layout_height="wrap_content"
            android:text="NAME :  "/>
        <EditText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:hint="Enter your NAME"
            android:textColorHint="#999"
            android:inputType="text"
            android:textColor="@color/colorFont"
            android:id="@+id/ent_name"

            android:layout_marginLeft="49dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorFont"

            android:layout_height="wrap_content"
            android:text="PASSWORD :  "/>
        <EditText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:hint="Enter your Password"
            android:textColorHint="#999"
            android:inputType="textPassword"
            android:textColor="@color/colorFont"
            android:id="@+id/ent_pass"

            android:layout_marginLeft="49dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorFont"

            android:layout_height="wrap_content"
            android:text="Age :  "/>
        <EditText
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:hint="Enter your Age"
            android:textColorHint="#999"
            android:inputType="number"
            android:textColor="@color/colorFont"
            android:id="@+id/ent_age"

            android:layout_marginLeft="49dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorFont"
android:layout_marginRight="17dp"
            android:layout_height="wrap_content"
            android:text="Gender :  "/>
       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_marginRight="87dp"
           android:layout_height="wrap_content">

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ent_gf"
               android:text="F"/>
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ent_gm"
               android:text="M"/>
       </RadioGroup>
    </LinearLayout>




</LinearLayout>
